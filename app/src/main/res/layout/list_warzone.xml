<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cardTier">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRed">
            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tier 1"
                android:id="@+id/tvTier"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="@font/gotham"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:id="@+id/cardWarzone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/support"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/ivSupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/s9_real"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9S"
                    android:id="@+id/tvSupport"
                    android:gravity="center"
                    android:fontFamily="@font/gotham"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/attacker"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/ivAttacker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/b2_real"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2B"
                    android:id="@+id/tvAttacker"
                    android:gravity="center"
                    android:fontFamily="@font/gotham"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tank"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/ivTank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a2_real"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tvTank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="A2"
                    android:gravity="center"
                    android:fontFamily="@font/gotham"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>